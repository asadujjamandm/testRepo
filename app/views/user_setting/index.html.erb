<%= render 'scripts' %>
<section class="content" style="padding: 0px 0px !important; overflow: hidden !important;">
  <div class="row">
    <div class="col-md-12">
      <%= form_tag "/user_setting/update", :id => 'user_setting_form', :method => 'post' do %>
          <% i = 1 #init i %>
          <% if !@page_results.nil? %>
              <%= render 'control_panel' %>
              <div class="box box-primary">
                <div class="row">
                  <div class="col-md-6">
                    <div class="table-responsive">
                      <table class="table table-bordered table-striped" style="border-radius: 2px !important;">
                        <thead>
                        <tr>
                          <th style="text-align: center !important;"><%= @localData['setting_key'] %></th>
                          <th style="text-align: center !important;"><%= @localData['value'] %></th>
                        </tr>
                        </thead>
                        <tbody>
                        <% @page_results.each do |k, v| %>
                            <tr><td><%= @labels[ v.setting_key ] %>
                            </td>
                              <td style="text-align:center;"><%=  text_field_tag ("setting_value[" + v.setting_id + ']'), '' +  v.setting_value, :maxlength => 500, :size => 20   %></td></tr>
                            <% i = i + 1 #increment i%>
                        <% end %>
                        </tbody>
                      </table>
                      <%= @localData['valid_page_size_info'] %>
                    </div>
                  </div>
                  <!--<div class="col-md-6">
                    <%= @localData['valid_page_size_info'] %>
                    <div class="groupbox" style="margin-top: 20px">
                      &lt;!&ndash;ERP -> TnB
                          Robert
                          07-16-2013
                      &ndash;&gt;
                      <div class="legend" style='width:100px'>TnB User ID</div>
                      <%= hidden_field_tag 'erp_user_id_original', @erp_user_id %>
                      <%=  text_field_tag ('erp_user_id'), @erp_user_id , :maxlength => 500, :size => 20   %>
                    </div>
                  </div>-->
                </div>
              </div>
              </div>
          <% end %>
      <% end %>
    </div>
  </div>
</section>
