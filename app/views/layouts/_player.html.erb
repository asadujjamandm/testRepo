<div id="media">
    <!-- original width="480" height="378" -->
    <object classid="<%= clsid %>" width="480" height="378" id="<%= obj_id %>">
        <param name="movie" value="<%= object_path %>" />
        <param name="quality" value="best" />
        <param name="bgcolor" value="#1a1a1a" />
        <param name="allowfullscreen" value="true" />
        <param name="scale" value="showall" />
        <param name="allowscriptaccess" value="always" />
        <param name="flashvars" value="autostart=false&thumb=<%= image_path %>&thumbscale=100&color=0x000000,0x000000" />
        <!--[if !IE]>-->
        <object type="application/x-shockwave-flash" data="<%= object_path %>" width="480" height="378">
            <param name="quality" value="best" />
            <param name="bgcolor" value="#1a1a1a" />
            <param name="allowfullscreen" value="true" />
            <param name="scale" value="showall" />
            <param name="allowscriptaccess" value="always" />
            <param name="flashvars" value="autostart=false&thumb=<%= image_path %>&thumbscale=100&color=0x000000,0x000000" />
