<%= render 'scripts' %>
<section class="content" style="padding: 0px 15px !important; overflow: hidden !important;">
  <div class="row">
    <%= render 'control_panel' %>
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="row">
          <div class="col-md-6">
            <% if @syncs.nil? || @syncs.size == 0 %>
                <div class="statusdiv"><%= @localData['no_sync_history'] %></div>
            <% else %>
                <table class="table table-striped table-bordered">
                  <caption style="border: 1px solid #ddd"><%= @localData['recent_syncs'] %></caption>
                  <thead>
                  <tr>
                    <th><%= @localData['sync_type'] %></th>
                    <th><%= @localData['sync_item'] %></th>
                    <th width="200px"><%= @localData['last_synced'] %></th>
                  </tr>
                  </thead>
                  <tbody>
                  <% @syncs.each do |k, v| %>
                      <tr>
                        <td><%= v.type %></td>
                        <td><%= v.item %></td>
                        <td class="centerdata"><%= v.last_sync %></td>
                      </tr>
                  <% end %>
                  </tbody>
                </table>
            <% end %>
          </div>

        </div>
      </div>

    </div>
  </div>
</section>
