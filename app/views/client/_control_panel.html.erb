<% if is_new_client %>
    <div style="margin-bottom: 10px; margin-right: 10px">
      <span><%= link_to content_tag(:i," ",:class=>"fa fa-fw fa-save") + @localData['save'], 'javascript:createClient(false)', :title => @localData['save_new_timecard'] , :class=> "btn btn-primary", :style => "margin-bottom: 5px" %></span>
      <span><%= link_to content_tag(:i," ",:class=>"fa fa-fw fa-times") + ' ' + @localData['cancel_changes'], {:controller => 'client', :action => 'index'}, :id => 'cancel', :title => @localData['cancel_changes'], :class=> "btn btn-primary ", :style => "margin-bottom: 5px" %></span>
    </div>
 <% elsif !@dirty_client.nil? %>
    <div style="margin-bottom: 10px; margin-right: 10px">
      <span><%= link_to content_tag(:i," ",:class=>"fa fa-fw fa-edit") + @localData['update_changes'], 'javascript:updateClient(false)', :title => @localData['update_changed_timecards'] , :class=> "btn btn-primary", :style => "margin-bottom: 5px" %></span>
      <span><%= link_to content_tag(:i," ",:class=>"fa fa-fw fa-times") + ' ' + @localData['cancel_changes'], {:controller => 'client', :action => 'index'}, :id => 'cancel', :title => @localData['cancel_changes'], :class=> "btn btn-primary ", :style => "margin-bottom: 5px" %></span>
    </div>
 <% else %>
    <div style="margin-bottom: 10px; margin-right: 10px">
      <span><%= link_to image_tag('addnew.png', :options => {:alt => @localData['add_new']}) + ' ' + @localData['add_new'], {:controller => 'client', :action => 'new'}, :id => 'new', :title => @localData['create_new'], :tabindex=> "-1",:class => "btn btn-primary" %></span>

    </div>
 <% end %>