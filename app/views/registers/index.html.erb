<%= render 'scripts' %>
<div class="form-box" id="register-box">
  <div class="header" style="padding: 10px 10px 40px 10px">
    <div>
      <%= image_tag('logo.png', :alt => @local_menu_labels['wiptime'], :height => '32px', :width => '32px', :style => "float: left") %>
      <p style="float: left; vertical-align: middle; font-weight: 500; margin-top: -5px; margin-left: 5px">WIPTime</p>
      <p style="float: right; vertical-align: middle; font-weight: 400; margin-top: -5px">Sign Up</p>
    </div>
  </div>
  <%= form_for @usersignup, :as => :register, :url => signup_path(@usersignup), :method => :put do |f| %>
      <div class="body bg-gray">
        <div class="form-group">
          <%= f.text_field :full_name, :class => 'form-control', :placeholder => "User Full Name" %>
        </div>
        <div class="form-group">
          <%= f.text_field :email, :class => 'form-control', :placeholder => "Email" %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, :class => 'form-control', :placeholder => "Password" %>
        </div>
        <div class="form-group">
          <%= f.password_field :confirmed_password, :class => 'form-control', :placeholder => "Confirm Password" %>
        </div>
        <div class="form-group">
          <%= f.text_field :farm_name, :class => 'form-control', :placeholder => "Firm Name" %>
        </div>
        <div class="messageContainer">
          <%
             found = false
             flash.each do |key, value|
          %>
              <div id='messageDiv' class="flash" style="color: #b70000" <%= key %>"><%= value %></div>
          <%
             found = true
             end
             if (!found) then
          %>
              <div id='messageDiv' style="display:none" class="flash success"></div>
          <%
             end
          %>
          </div>
          <div class="g-recaptcha" data-sitekey="6LfwgQATAAAAACTNDFj2BKZJO3l7MgGGkI79reah">
            <%= raw recaptcha_tags %>
          </div>
      </div>

      <div class="footer">
        <%= f.submit "Sign me up", :class => "btn bg-light-blue btn-block" %>
        <%= link_to 'I already have a membership', root_path %>
      </div>
  <% end %>
  <script type="text/javascript">
      $('html').css("background", "none repeat scroll 0 0 #c5c5c5");
      $('html').css("height", "inherit");
      $('body').css("height", "inherit");
  </script>
  </div>